<h1>Episode</h1>

<h3><%= "Date: #{@episode.date}" %></h3>

<h3>Guests</h3>

<ul>
  <% @episode.guests.each do |guest| %>
    <li><%= link_to guest.name, guest %> - Rating: <%= guest.appearances.find_by(episode_id: @episode).rating %>/5 <%= link_to "(edit appearance)", edit_appearance_path(guest.appearances.find_by(episode_id: @episode)) %></li>
  <% end %>
</ul>
